<div class="container mt-5">
  <h1>Modifier le commentaire</h1>

  <% if @comment.errors.any? %>
    <div class="alert alert-danger mb-3" role="alert">
      <%= @comment.errors.full_messages.join(", ") %>
    </div>
  <% end %>

  <%= form_with model: @comment, url: comment_path(@comment), method: :patch, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :content, "Contenu", class: "form-label" %>
      <%= f.text_area :content, class: "form-control", rows: 4 %>
    </div>
    <%= f.submit "Enregistrer", class: "btn btn-primary" %>
  <% end %>

  <div class="mt-3">
    <% gossip = @comment.commentable.is_a?(Gossip) ? @comment.commentable : @comment.commentable.commentable %>
    <%= link_to "Retour au potin", gossip_path(gossip), class: "btn btn-outline-secondary" %>
  </div>
</div>
