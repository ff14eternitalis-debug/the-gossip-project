<% if resource.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h5><%= pluralize(resource.errors.count, "erreur") %> :</h5>
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
