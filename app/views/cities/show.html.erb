<div class="container mt-5">
  <h1><%= @city.name %></h1>
  <p class="text-muted">Code postal : <%= @city.zip_code %></p>

  <h3 class="mt-4">Potins de la ville</h3>

  <% if @gossips.any? %>
    <div class="row mt-3">
      <% @gossips.each do |gossip| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= gossip.title %></h5>
              <p class="card-text text-muted">Par <%= gossip.user.first_name %></p>
              <p class="card-text small text-muted">
                <img src="/icons/like.svg" width="14" height="14" class="me-1" alt="" aria-hidden="true">
                <%= gossip.likes.size %> like<%= "s" if gossip.likes.size != 1 %>
                <% if user_signed_in? %>
                  <% user_like = gossip.likes.find_by(user: current_user) %>
                  <% if user_like %>
                    <%= button_to like_path(user_like), method: :delete, form: { class: "d-inline" }, class: "btn btn-link btn-sm p-0 align-baseline", aria: { label: "Retirer j'aime de #{gossip.title}" } do %>
                      <img src="/icons/like.svg" width="14" height="14" alt=""> Unlike
                    <% end %>
                  <% else %>
                    <%= button_to likes_path(likeable_type: "Gossip", likeable_id: gossip.id), method: :post, form: { class: "d-inline" }, class: "btn btn-link btn-sm p-0 align-baseline", aria: { label: "J'aime #{gossip.title}" } do %>
                      <img src="/icons/like.svg" width="14" height="14" alt=""> Like
                    <% end %>
                  <% end %>
                <% end %>
              </p>
            </div>
            <div class="card-footer">
              <%= link_to gossip_path(gossip), class: "btn btn-primary btn-sm", aria: { label: "Voir plus : #{gossip.title}" } do %>Voir plus<% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted mt-3">Aucun potin dans cette ville pour le moment.</p>
  <% end %>

  <div class="mt-4">
    <%= link_to "Retour aux potins", root_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
