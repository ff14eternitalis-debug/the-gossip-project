<div class="container mt-5">
  <h1><%= @city.name %></h1>
  <p class="text-muted">Code postal : <%= @city.zip_code %></p>

  <h3 class="mt-4">Potins de la ville</h3>

  <% if @gossips.any? %>
    <div class="row mt-3">
      <% @gossips.each do |gossip| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= gossip.title %></h5>
              <p class="card-text text-muted">Par <%= gossip.user.first_name %></p>
            </div>
            <div class="card-footer">
              <%= link_to "Voir plus", gossip_path(gossip), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted mt-3">Aucun potin dans cette ville pour le moment.</p>
  <% end %>

  <div class="mt-4">
    <%= link_to "Retour aux potins", root_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
