<div class="container mt-5">
  <h1>Message</h1>

  <div class="card mt-4">
    <div class="card-body">
      <p class="text-muted small mb-2">
        <strong>De :</strong> <%= link_to @message.sender.first_name, user_path(@message.sender) %>
        â€” <strong>A :</strong>
        <% @message.recipients.each_with_index do |r, i| %>
          <%= link_to r.first_name, user_path(r) %><%= ", " unless i == @message.recipients.size - 1 %>
        <% end %>
      </p>
      <p class="text-muted small mb-3"><%= @message.created_at.strftime("%d/%m/%Y a %Hh%M") %></p>
      <p><%= simple_format(@message.content) %></p>
    </div>
  </div>

  <div class="mt-4">
    <% if @message.sender != current_user %>
      <%= link_to "Repondre", new_conversation_path(recipient_id: @message.sender.id), class: "btn btn-primary btn-sm" %>
    <% end %>
    <%= link_to "Retour a la messagerie", conversations_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>
</div>
